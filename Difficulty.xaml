<Page x:Class="HomeLabWPF.Difficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeLabWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="475"
      Background="DarkGray"
      Title="Difficulty">

    <Grid>
        <Label x:Name="DifGame" Content="Выбор сложности" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="73" Width="455" HorizontalContentAlignment="Center" />
        <Button x:Name="lightLevelBtn" Click="lightLevelBtn_Click" Content="Легко" HorizontalAlignment="Left" Margin="107,92,0,0" VerticalAlignment="Top" Width="258" Height="86" FontWeight="Bold"/>
        <Button x:Name="mediumLevelBtn" Click="mediumLevelBtn_Click" Content="Средне" HorizontalAlignment="Left" Margin="107,211,0,0" VerticalAlignment="Top" Width="258" Height="86" RenderTransformOrigin="0.535,1.465" FontWeight="Bold"/>
        <Button x:Name="hardLevelBtn" Click="hardLevelBtn_Click" Content="Сложно" HorizontalAlignment="Left" Margin="107,327,0,0" VerticalAlignment="Top" Width="258" Height="86" RenderTransformOrigin="0.535,1.465" FontWeight="Bold"/>

    </Grid>
</Page>
