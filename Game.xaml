<Page x:Name="GamePage" x:Class="HomeLabWPF.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeLabWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="475"
      Background="DarkGray"
     
      Title="Game" KeyDown="GamePage_KeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menuStrip" HorizontalAlignment="Left" Height="46" Margin="10,10,0,0" VerticalAlignment="Top" Width="464" Grid.ColumnSpan="2">
            <MenuItem x:Name="SaveBtn" Header="Сохранить карту" Click="SaveBtn_Click"></MenuItem>
            <MenuItem Header="Выход" Click="MenuItem_Click" ></MenuItem>
        </Menu>

        <Canvas x:Name="Canvas" HorizontalAlignment="Left" Height="295" Margin="10,116,-8.8,0" VerticalAlignment="Top" Width="474" Grid.ColumnSpan="3"/>
        <Canvas  x:Name="InfoBoard" HorizontalAlignment="Left" Height="55" Margin="10,61,0,0" VerticalAlignment="Top" Width="454" Grid.ColumnSpan="2"/>



    </Grid>
</Page>
